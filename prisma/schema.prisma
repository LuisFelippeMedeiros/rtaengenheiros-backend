generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password      String
  cpf           String   @unique
  rg            String
  telephone     String?
  date_of_birth DateTime
  bank          String
  agency        String
  account       String
  pix           String   @unique
  address       String
  district      String
  number        String
  complement    String
  active        Boolean  @default(true)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  group    Group  @relation(fields: [group_id], references: [id])
  group_id String
  State    State? @relation(fields: [state_id], references: [id])
  state_id Int?
  City     City?  @relation(fields: [city_id], references: [id])
  city_id  Int?

  @@map("users")
}

model Group {
  id         String   @id @default(uuid())
  name       String   @unique
  active     Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  roles RolesGroup[]
  User  User[]

  @@map("groups")
}

model Role {
  id         String   @id @default(uuid())
  name       String   @unique
  active     Boolean  @default(true)
  action     String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  groups RolesGroup[]

  @@map("roles")
}

model RolesGroup {
  id       String @id @default(uuid())
  role_id  String
  Group    Group  @relation(fields: [group_id], references: [id])
  group_id String
  Role     Role   @relation(fields: [role_id], references: [id])

  @@map("rolesgroup")
}

model City {
  id         Int      @id
  name       String
  active     Boolean  @default(true)
  created_at DateTime @default(now())
  State      State    @relation(fields: [state_id], references: [id])
  state_id   Int
  User       User[]

  @@map("cities")
}

model State {
  id         Int      @id
  name       String
  initials   String   @unique
  active     Boolean  @default(true)
  created_at DateTime @default(now())

  City City[]
  User User[]

  @@map("states")
}
